<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <!--       <item name="android:colorForeground">@color/foreground</item>-->
        <item name="windowActionModeOverlay">true</item>
        <!--   <item name="actionModeBackground">@color/primary</item>-->
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.HomeActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btn_blue" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LocationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Custumize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
