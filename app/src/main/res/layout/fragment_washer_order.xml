<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context="com.ad.sample.ui.fragment.WasherOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_btn_washer_order"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:orientation="vertical">
            <com.ad.sample.ui.widget.RobotoBoldTextView
                android:id="@+id/whaser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fachri"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_marginTop="2dp"
                android:id="@+id/rating_whaser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{entypo-star-outlined} 4.7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/image_washer"
                android:layout_width="@dimen/image_washer_size"
                android:layout_height="@dimen/image_washer_size"
                app:av_border_color="@android:color/white"
                app:av_border_width="4dp"
                app:av_text_size_percentage="35" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">
            <com.ad.sample.ui.widget.RobotoBoldTextView
                android:id="@+id/service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luxury Wash"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_marginTop="2dp"
                android:id="@+id/book_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{entypo-clock} 10:20:45"/>

        </LinearLayout>

    </LinearLayout>

    <!--TextView layout Main Menu TextView-->
    <LinearLayout
        android:id="@+id/layout_btn_washer_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <com.ad.sample.ui.widget.RobotoRegularButton
            android:id="@+id/btn_contact"
            style="@style/btn_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_half_vertical_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_contact" />

        <com.ad.sample.ui.widget.RobotoRegularButton
            android:id="@+id/btn_cancel"
            style="@style/btn_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_half_vertical_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/button_cancel" />

    </LinearLayout>
</LinearLayout>