<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ad.sample.ui.activity.AddVehicleActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/select_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/vehicle_mobil"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#ccc"
                    app:cardElevation="2dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:id="@+id/img_car"
                            />

                        <com.ad.sample.ui.widget.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/car"
                            android:textColor="@color/black_333333"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/tx_car" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/vehicle_motor"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ccc"
                    app:cardElevation="2dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:id="@+id/img_motorcycle" />

                        <com.ad.sample.ui.widget.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/motorcycle"
                            android:textColor="@color/black_333333"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/tx_motorcycle" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/select_brand">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ccc"
                    app:cardElevation="2dp"
                    app:contentPadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/indicator_select_brand">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/ic_launcher"
                            android:id="@+id/img_brand" />

                        <com.ad.sample.ui.widget.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="@string/select_brand"
                            android:textColor="@color/black_333333"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/indicator_select_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_margin="10dp"
                    android:text="{entypo-chevron-with-circle-right}"
                    android:textColor="@color/blue_2196F3"
                    android:textSize="@dimen/indicator_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/select_model">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ccc"
                    app:cardElevation="2dp"
                    app:contentPadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/indicator_select_model">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/ic_launcher"
                            android:id="@+id/img_model" />

                        <com.ad.sample.ui.widget.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="@string/select_model"
                            android:textColor="@color/black_333333"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/indicator_select_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_margin="10dp"
                    android:text="{entypo-chevron-with-circle-right}"
                    android:textColor="@color/blue_2196F3"
                    android:textSize="@dimen/indicator_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/select_transmission">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ccc"
                    app:cardElevation="2dp"
                    app:contentPadding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/indicator_select_transmission">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@mipmap/ic_launcher"
                            android:id="@+id/img_transmission" />

                        <com.ad.sample.ui.widget.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="@string/select_transmission"
                            android:textColor="@color/black_333333"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/indicator_select_transmission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:layout_margin="10dp"
                    android:text="{entypo-chevron-with-circle-right}"
                    android:textColor="@color/blue_2196F3"
                    android:textSize="@dimen/indicator_text_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/select_year">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ccc"
                app:cardElevation="2dp"
                app:contentPadding="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/indicator_select_year">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/img_year" />

                    <com.ad.sample.ui.widget.RobotoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lines="1"
                        android:text="@string/select_year"
                        android:textColor="@color/black_333333"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/indicator_select_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center|right"
                android:layout_margin="10dp"
                android:text="{entypo-chevron-with-circle-right}"
                android:textColor="@color/blue_2196F3"
                android:textSize="@dimen/indicator_text_size"
                android:textStyle="bold" />
        </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>