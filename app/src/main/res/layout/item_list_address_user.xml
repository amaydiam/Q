<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/label"
        android:gravity="center|left"
        android:orientation="horizontal">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/photo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:av_border_color="@color/colorPrimary"
            app:av_border_width="2dp"
            app:av_text_size_percentage="35" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_half_vertical_margin"
            android:orientation="vertical">

            <com.qwash.user.ui.widget.RobotoBoldTextView
                android:id="@+id/name_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="name_address"
                android:textSize="14sp" />

            <com.qwash.user.ui.widget.RobotoRegularTextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="address"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devider" />

</LinearLayout>