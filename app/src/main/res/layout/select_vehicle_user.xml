<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/select_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/vehicle_mobil"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ccc"
                app:contentPadding="5dp"
                android:layout_marginRight="10dp"
                card_view:cardElevation="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:layout_weight="1"
                        android:id="@+id/select_vehicle_mobil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected" />

                    <LinearLayout
                        android:id="@+id/space_mobile"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="80dp">

                        <ImageView
                            android:id="@+id/img_mobil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/mobil"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_below="@id/space_mobile"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/merk_mobil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="@android:color/black"
                            android:text="Honda"/>

                        <TextView
                            android:id="@+id/model_mobil"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="@android:color/black"
                            android:text="Jazz 1.5 AT 2016"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/vehicle_motor"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ccc"
                app:contentPadding="5dp"
                card_view:cardElevation="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <RadioButton
                    android:layout_weight="1"
                    android:id="@+id/select_vehicle_motor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected"
                    android:checked="false" />

                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/space_motor"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/img_motor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/motor"/>
                </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_below="@id/space_motor"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/merk_motor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@android:color/black"
                        android:text="Kawasaki"/>

                    <TextView
                        android:id="@+id/model_motor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@android:color/black"
                        android:text="Ninja RR 250 2013"
                        />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_add_vehicle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/select_vehicle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="#2f7edf"
            android:text="ADD VEHICLE"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>