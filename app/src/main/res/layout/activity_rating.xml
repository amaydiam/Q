<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_2196F3"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <include layout="@layout/layout_selected_vehicle" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin">

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:layout_marginRight="@dimen/activity_half_vertical_margin">

                        <agency.tango.android.avatarview.views.AvatarView
                            android:id="@+id/image_washer"
                            android:layout_width="@dimen/image_washer_size"
                            android:layout_height="@dimen/image_washer_size"
                            app:av_border_color="@android:color/white"
                            app:av_border_width="4dp"
                            app:av_text_size_percentage="35" />

                        <com.qwash.user.ui.widget.RobotoRegularTextView
                            android:id="@+id/whaser_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/activity_half_vertical_margin"
                            android:layout_toRightOf="@id/image_washer"
                            android:text="Fachri"
                            android:textColor="@color/black_424242"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical|right"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.qwash.user.ui.widget.RobotoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/harga_total"
                            android:textColor="@color/grey"
                            android:textSize="16sp"/>

                        <com.qwash.user.ui.widget.RobotoBoldTextView
                            android:gravity="right"
                            android:id="@+id/total_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_2196F3"
                            android:textSize="18sp"
                            android:text="@string/harga_total"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#ccc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_half_vertical_margin"
                        android:layout_marginRight="@dimen/activity_half_vertical_margin"
                        android:text="RATE YOUR WASH"
                        android:textColor="@color/green_light"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#ccc" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/rating_wash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:theme="@style/RatingBar"
                    android:numStars="5"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <com.qwash.user.ui.widget.RobotoRegularEditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:gravity="top|left"
                    android:hint="Leave a comment"
                    android:textColorHint="@color/grey"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:maxLines="5"
                    android:minLines="1"
                    android:padding="10dp"
                    android:scrollbars="vertical" />

                <com.qwash.user.ui.widget.RobotoRegularButton
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_blue"
                    android:text="SUBMIT"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>